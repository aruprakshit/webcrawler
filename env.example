# Environment Configuration for Web Crawler

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_URLS_TO_CRAWL=urls-to-crawl
KAFKA_TOPIC_CRAWLED_CONTENT=crawled-content

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Cassandra Configuration
CASSANDRA_HOST=cassandra
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=webcrawler

# MinIO Configuration
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=webcrawler-content

# Application Configuration
PYTHON_PRODUCER_PORT=8000
NODEJS_CONSUMER_PORT=3001
MAX_CONCURRENT_REQUESTS=10
CRAWL_DELAY_MS=1000
REQUEST_TIMEOUT_MS=30000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
